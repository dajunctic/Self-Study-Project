#:kivy 1.0

<MenuWidget>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, .8
        Rectangle:
            size: self.size
            
    Label:
        font_size: 60
        font_name: 'fonts/Sackers-Gothic-Std-Light.ttf'
        text: root.parent.menu_title
        pos_hint: { "center_x": .5 , "center_y": .7}
    Button:
        font_size: 30
        font_name: 'fonts/Eurostile.ttf'
        text: root.parent.menu_button_title
        pos_hint: { "center_x": .5 , "center_y": .5}
        size_hint: .2, .1
        on_press: root.parent.on_menu_button_pressed()
        background_normal: ''
        background_color: 1, .3, .4, .8

    Button:
        font_size: 30
        font_name: 'fonts/Eurostile.ttf'
        text: 'HIGH SCORE'
        pos_hint: { "center_x": .5 , "center_y": .35}
        size_hint: .2, .1
        on_press: root.parent.on_high_score_button_pressed()
        background_normal: ''
        background_color: 1, .3, .4, .8

    Button:
        font_size: 30
        font_name: 'fonts/Eurostile.ttf'
        text: 'EXIT'
        pos_hint: { "center_x": .5 , "center_y": .2}
        size_hint: .2, .1
        on_press: root.parent.exit()
        background_normal: ''
        background_color: 1, .3, .4, .8
        

<HighScore>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, .8
        Rectangle:
            size: self.size
    Label:
        text: 'H I G H  S C O R E'
        font_size: 40
        font_name: 'fonts/Sackers-Gothic-Std-Light.ttf'
        pos_hint: { 'center_x': .5, 'center_y': .8}
        color: 0, 204.0/255, 1

    Button:
        font_size: 30
        font_name: 'fonts/Eurostile.ttf'
        text: 'BACK'
        pos_hint: { "center_x": .3 , "center_y": .2}
        size_hint: .2, .1
        on_press: root.parent.on_back_button_pressed()
        background_normal: ''
        background_color: 1, .3, .4, .8
    Button:
        font_size: 30
        font_name: 'fonts/Eurostile.ttf'
        text: 'RESET'
        pos_hint: { "center_x": .7 , "center_y": .2}
        size_hint: .2, .1
        on_press: root.parent.reset_high_score()
        background_normal: ''
        background_color: 1, .3, .4, .8


