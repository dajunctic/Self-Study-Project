MDScreen:
    name: 'conversation'
    MDFloatLayout:
        md_bg_color: 3/255, 28/255, 47/255, 1
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {'center_y': 0.95}
            user_font_size: "20sp"
            theme_text_color: "Custom"
            text_color: 1/255, 255/255, 255/255, 1
            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = 'profile'
        MDIconButton:
            icon: "dots-vertical"
            pos_hint: {'center_x': .93, 'center_y': 0.95}
            user_font_size: "20sp"
            theme_text_color: "Custom"
            text_color: 1/255, 255/255, 255/255, 1

        MDLabel:
            text: "Chat with friends"
            font_name: "fonts/Poppins-Bold"
            font_size: "20sp"
            pos_hint: {"center_x": .56, "center_y": .89}
            color: 196/255, 25/255, 138/255, 1
        SearchBar:
            size_hint: .85, .08
            pos_hint: {'center_x': .5, 'center_y': .78}
            elevation: 10
            md_bg_color: 91/255, 132/255, 177/255, 1
            radius: [15]
            Image:
                source: "assets/search.png"
                pos_hint: {'center_x': .1, 'center_y': .48}
                size_hint_y: .5
            TextInput:
                hint_text: 'Search friend'
                size_hint: .78, None
                pos_hint: {'center_x': .58, 'center_y': .5}
                height: self.minimum_height
                cursor_color: 1, 1, 1, 1
                cursor_width: "2sp"
                multiline: False
                background_color: 0, 0, 0, 0
                padding: 15
                font_name: "fonts/Poppins-Medium"
                font_size: '14sp'
                hint_text_color: 3/255, 28/255, 47/255, 1
                foreground_color: 1, 1, 1, 1
