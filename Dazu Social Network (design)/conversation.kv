                        pos_hint: {'center_x': .1, 'center_y': .5}
                    MDLabel:
                        text: "Nguyễn Ngọc Phương Anh"
                        font_size: '14sp'
                        font_name: 'fonts/VN-Poppins-ExtraBold'
